# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/doors-ecommerce

# Session Configuration (REQUIRED - must be a strong random string)
SESSION_SECRET=your-super-secret-key-change-this-in-production
SESSION_NAME=doors.sid
SESSION_MAX_AGE=86400000

# Cache Configuration (In-Memory using node-cache)
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600
CACHE_PRODUCTS_TTL=1800
CACHE_SETTINGS_TTL=86400

# Internationalization
DEFAULT_LOCALE=he

# File Upload
MAX_FILE_SIZE=2097152

# Admin Seeding (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
