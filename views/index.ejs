<style>
  .glass {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }
  .glass:hover {
    transform: translateY(-10px) scale(1.02);
  }
</style>

<!-- Hero Section -->
<section
  class="py-16 px-4 md:py-24 lg:py-32 flex items-center justify-center text-center relative overflow-hidden rounded-2xl"
  style="
    background-image: linear-gradient(rgba(0, 0, 0, 0.35), rgba(0, 0, 0, 0.6)),
      url('/images/hero.jpg');
    background-size: cover;
    background-position: center;
  "
>
  <div class="relative z-10 text-white max-w-3xl px-4 animate-fade-in">
    <h1 class="text-4xl md:text-6xl font-extrabold mb-4 drop-shadow-lg">
      Elegance at Your Entrance
    </h1>
    <p class="text-base md:text-lg opacity-90">
      Discover our collection of premium interior and exterior doors, crafted to
      elevate your space.
    </p>
  </div>
</section>

<!-- Features Section -->
<section class="py-20 px-6 md:px-12 bg-[#DED9D3] text-[#242425]">
  <div class="max-w-6xl mx-auto text-center mb-12">
    <h2 class="text-3xl font-bold mb-4">Why Choose Us?</h2>
    <p class="text-[#ACA59B]">
      Combining craftsmanship, durability, and timeless design — every door
      tells a story.
    </p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 max-w-6xl mx-auto">
    <% if (features && features.length > 0) { %> <% features.forEach(feature =>
    { %>

    <div
      class="glass rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 p-8 text-center flex flex-col items-center"
    >
      <div
        class="w-16 h-16 flex items-center justify-center rounded-full bg-[#242425] text-white mb-6"
      >
        <i class="<%= feature.icon %> text-2xl"></i>
      </div>

      <h3 class="text-xl font-semibold mb-3"><%= feature.title %></h3>

      <p class="text-[#ACA59B] text-sm"><%= feature.description %></p>
    </div>

    <% }) %> <% } %>
  </div>
</section>

<!-- Categories Section -->
<section class="py-20 px-6 md:px-12 lg:px-24 bg-base-100">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-10 max-w-6xl mx-auto">
    <!-- Internal Doors -->
    <a
      href="/products?category=inner"
      class="group rounded-xl overflow-hidden bg-accent hover:shadow-xl transform hover:-translate-y-2 transition-all duration-300"
    >
      <div
        class="h-80 bg-center bg-cover"
        style="background-image: url('/images/inner.jpg')"
      ></div>
      <div class="p-8 text-center">
        <h3
          class="text-2xl font-bold text-primary group-hover:text-black transition-colors"
        >
          Internal Doors
        </h3>
        <p class="text-secondary mt-2">
          Refined designs to complement your home’s aesthetic.
        </p>
      </div>
    </a>

    <!-- External Doors -->
    <a
      href="/products?category=main"
      class="group rounded-xl overflow-hidden bg-accent hover:shadow-xl transform hover:-translate-y-2 transition-all duration-300"
    >
      <div
        class="h-80 bg-center bg-cover"
        style="background-image: url('/images/outdoor.jpeg')"
      ></div>
      <div class="p-8 text-center">
        <h3
          class="text-2xl font-bold text-primary group-hover:text-black transition-colors"
        >
          External Doors
        </h3>
        <p class="text-secondary mt-2">
          Durable and secure doors that make a statement.
        </p>
      </div>
    </a>
  </div>
</section>

<!-- Contact Section -->
<section class="py-20 bg-base-100 text-center">
  <h2 class="text-3xl font-bold mb-4 text-primary">Get in Touch</h2>
  <p class="text-secondary mb-10">
    We're here to help you find the perfect door.
  </p>

  <div class="flex flex-col sm:flex-row justify-center gap-4 flex-wrap">
    <a
      href="tel:+201234567890"
      class="flex items-center justify-center gap-2 min-w-[200px] h-14 px-6 bg-primary text-white rounded-xl hover:scale-105 transition-transform"
    >
      <i class="fa-solid fa-phone text-xl"></i> Call Us
    </a>

    <a
      href="https://wa.me/201234567890"
      class="flex items-center justify-center gap-2 min-w-[200px] h-14 px-6 bg-primary text-white rounded-xl hover:scale-105 transition-transform"
    >
      <i class="fa-brands fa-whatsapp text-xl"></i> Message on WhatsApp
    </a>

    <a
      href="mailto:info@yourdomain.com"
      class="flex items-center justify-center gap-2 min-w-[200px] h-14 px-6 bg-primary text-white rounded-xl hover:scale-105 transition-transform"
    >
      <i class="fa-solid fa-envelope text-xl"></i> Send an Email
    </a>
  </div>
</section>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const fadeEls = document.querySelectorAll(".animate-fade-in");
    fadeEls.forEach((el, i) => {
      el.style.opacity = 0;
      setTimeout(() => {
        el.style.transition = "opacity 1s ease";
        el.style.opacity = 1;
      }, i * 200);
    });
  });
</script>
