<!-- Categories Section -->
<section class="py-20 px-6 md:px-12 lg:px-24">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-10 max-w-6xl mx-auto">
    <!-- Internal Doors -->
    <a
      href="/products?category=inner"
      class="group rounded-xl overflow-hidden bg-accent hover:shadow-xl transform hover:-translate-y-2 transition-all duration-300"
    >
      <div
        class="h-80 bg-center bg-cover"
        style="
          background-image: url('<%= settings?.assets?.innerDoorsImage %>');
        "
      ></div>
      <div class="p-8 text-center">
        <h3
          class="text-2xl font-bold text-primary group-hover:text-black transition-colors"
        >
          <%= __('index.internal_doors_title') %>
        </h3>
        <p class="text-secondary mt-2">
          <%= __('index.internal_doors_subtitle') %>
        </p>
      </div>
    </a>

    <!-- External Doors -->
    <a
      href="/products?category=main"
      class="group rounded-xl overflow-hidden bg-accent hover:shadow-xl transform hover:-translate-y-2 transition-all duration-300"
    >
      <div
        class="h-80 bg-center bg-cover"
        style="
          background-image: url('<%= settings?.assets?.outerDoorsImage %>');
        "
      ></div>
      <div class="p-8 text-center">
        <h3
          class="text-2xl font-bold text-primary group-hover:text-black transition-colors"
        >
          <%= __('index.external_doors_title') %>
        </h3>
        <p class="text-secondary mt-2">
          <%= __('index.external_doors_subtitle') %>
        </p>
      </div>
    </a>
  </div>
</section>

<!-- Contact Section -->
<section class="py-20 text-center" id="contact">
  <h2 class="text-3xl font-bold mb-4 text-primary">
    <%= __('index.get_in_touch') %>
  </h2>
  <p class="text-secondary mb-10"><%= __('index.get_in_touch_subtitle') %></p>

  <div class="flex flex-col sm:flex-row justify-center gap-4 flex-wrap">
    <a
      href="tel:+201234567890"
      class="flex items-center justify-center gap-2 min-w-[200px] h-14 px-6 bg-primary text-white rounded-xl hover:scale-105 transition-transform"
    >
      <i class="fa-solid fa-phone text-xl"></i> <%= __('index.call_us') %>
    </a>

    <a
      href="https://wa.me/201234567890"
      class="flex items-center justify-center gap-2 min-w-[200px] h-14 px-6 bg-primary text-white rounded-xl hover:scale-105 transition-transform"
    >
      <i class="fa-brands fa-whatsapp text-xl"></i> <%=
      __('index.message_on_whatsapp') %>
    </a>

    <a
      href="mailto:info@yourdomain.com"
      class="flex items-center justify-center gap-2 min-w-[200px] h-14 px-6 bg-primary text-white rounded-xl hover:scale-105 transition-transform"
    >
      <i class="fa-solid fa-envelope text-xl"></i> <%= __('index.send_an_email')
      %>
    </a>
  </div>
</section>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const fadeEls = document.querySelectorAll(".animate-fade-in");
    fadeEls.forEach((el, i) => {
      el.style.opacity = 0;
      setTimeout(() => {
        el.style.transition = "opacity 1s ease";
        el.style.opacity = 1;
      }, i * 200);
    });
  });
</script>
