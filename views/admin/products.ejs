<style>
  .btn-primary {
    font-weight: 600;
    box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1);
  }
</style>

<section class="py-10 px-4 sm:px-6" x-data="productPanel()">
  <div class="max-w-7xl mx-auto">
    <div
      class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4"
    >
      <h1 class="text-3xl font-bold text-neutral">
        <%= __('admin.products.title') %>
      </h1>
      <button @click="openAddModal" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i>
        <%= __('admin.products.add_product') %>
      </button>
    </div>

    <div class="overflow-x-auto bg-white rounded-box shadow-xl">
      <%- include('../partials/admin/products/search') %> <%-
      include('../partials/admin/products/table') %>
    </div>
  </div>

  <%- include('../partials/admin/products/pagination') %> <%-
  include('../partials/admin/products/edit-modal') %> <%-
  include('../partials/admin/products/delete-modal') %> <%-
  include('../partials/admin/products/view-modal') %>
</section>

<script src="/admin-files/js/products.js"></script>
