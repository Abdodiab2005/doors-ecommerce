<div class="min-h-screen bg-slate-100 text-slate-900 p-6 md:p-10">
  <div class="max-w-6xl mx-auto">
    <div
      class="flex flex-col md:flex-row items-start md:items-center justify-between mb-6 gap-4"
    >
      <div>
        <h1 class="text-2xl md:text-3xl font-bold">
          <%= __('admin.settings.title') %>
        </h1>
        <p class="text-sm text-slate-500 mt-1">
          <%= __('admin.settings.subtitle') %>
        </p>
      </div>
      <div class="flex gap-3 shrink-0">
        <a
          href="tel:<%= settings?.phone || '' %>"
          class="btn btn-sm btn-outline btn-primary"
        >
          <i class="fa-solid fa-phone h-4 w-4"></i>
          <%= __('admin.settings.call') %>
        </a>
        <a
          href="https://wa.me/<%= settings?.whatsapp || '' %>"
          class="btn btn-sm btn-success text-white"
        >
          <i class="fa-brands fa-whatsapp h-4 w-4"></i>
          <%= __('admin.settings.whatsapp') %>
        </a>
      </div>
    </div>

    <% if (typeof success !== 'undefined' && success) { %>
    <div role="alert" class="alert alert-success mb-4 shadow-md">
      <i class="fa-solid fa-circle-check shrink-0 h-6 w-6"></i>
      <span><%= success %></span>
    </div>
    <% } %> <% if (typeof error !== 'undefined' && error) { %>
    <div role="alert" class="alert alert-error mb-4 shadow-md">
      <i class="fa-solid fa-circle-xmark shrink-0 h-6 w-6"></i>
      <span><%= error %></span>
    </div>
    <% } %>

    <div
      x-data="{ tab: 'general' }"
      class="bg-white rounded-2xl shadow-sm overflow-hidden"
    >
      <div class="flex flex-col md:flex-row">
        <%- include('../partials/admin/settings/aside') %>
        <main class="flex-1 p-6 md:p-8">
          <%- include('../partials/admin/settings/general') %> <%-
          include('../partials/admin/settings/assets') %> <%-
          include('../partials/admin/settings/contact') %> <%-
          include('../partials/admin/settings/credentials') %>
        </main>
      </div>
    </div>
  </div>
</div>

<script src="/admin-files/js/settings.js"></script>
