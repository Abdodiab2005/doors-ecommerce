<div class="min-h-screen bg-slate-100 text-slate-900 p-6 md:p-10">
  <div class="max-w-6xl mx-auto">
    <div
      class="flex flex-col md:flex-row items-start md:items-center justify-between mb-6 gap-4"
    >
      <!--  -->
      <div>
        <h1 class="text-2xl md:text-3xl font-bold">Settings</h1>
        <p class="text-sm text-slate-500 mt-1">
          تحكم في محتوى ومظهر الموقع — لوجو، صور الأبواب، بيانات التواصل، وحساب
          الأدمن.
        </p>
      </div>
      <div class="flex gap-3 shrink-0">
        <a
          href="tel:<%= settings?.phone || '' %>"
          class="btn btn-sm btn-outline btn-primary"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            />
          </svg>
          Call
        </a>
        <a
          href="https://wa.me/<%= settings?.whatsapp || '' %>"
          class="btn btn-sm btn-success text-white"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4"
            fill="currentColor"
            viewBox="0 0 16 16"
          >
            <path
              d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.595 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.068-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"
            />
          </svg>
          WhatsApp
        </a>
      </div>
    </div>

    <% if (typeof success !== 'undefined' && success) { %>
    <div role="alert" class="alert alert-success mb-4 shadow-md">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="stroke-current shrink-0 h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
        />
      </svg>
      <span><%= success %></span>
    </div>
    <% } %> <% if (typeof error !== 'undefined' && error) { %>
    <div role="alert" class="alert alert-error mb-4 shadow-md">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="stroke-current shrink-0 h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 14l2-2m0 0l2-2m-2 2l-2 2m2-2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"
        />
      </svg>
      <span><%= error %></span>
    </div>
    <% } %>

    <div
      x-data="{ tab: 'general' }"
      class="bg-white rounded-2xl shadow-sm overflow-hidden"
    >
      <div class="flex flex-col md:flex-row">
        <aside
          class="md:w-56 border-b md:border-b-0 md:border-r border-slate-200 p-4 bg-white"
        >
          <nav class="flex flex-col gap-2">
            <button
              :class="tab==='general'? 'btn btn-primary justify-start' : 'btn btn-ghost justify-start'"
              @click="tab='general'"
            >
              General
            </button>
            <button
              :class="tab==='assets'? 'btn btn-primary justify-start' : 'btn btn-ghost justify-start'"
              @click="tab='assets'"
            >
              Assets
            </button>
            <button
              :class="tab==='contact'? 'btn btn-primary justify-start' : 'btn btn-ghost justify-start'"
              @click="tab='contact'"
            >
              Contact & Socials
            </button>
            <button
              :class="tab==='admin'? 'btn btn-primary justify-start' : 'btn btn-ghost justify-start'"
              @click="tab='admin'"
            >
              Admin Account
            </button>
            <form
              action="/admin/settings/reset"
              method="post"
              class="mt-4 pt-4 border-t border-slate-200"
            >
              <button
                type="submit"
                class="btn btn-sm btn-outline btn-error w-full"
              >
                Reset to Defaults
              </button>
            </form>
          </nav>
        </aside>

        <main class="flex-1 p-6 md:p-8">
          <section x-show="tab==='general'" x-cloak>
            <form
              action="/admin/settings"
              method="post"
              enctype="multipart/form-data"
              class="space-y-6"
            >
              <input type="hidden" name="_method" value="POST" />
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="label"
                    ><span class="label-text text-slate-700"
                      >Site Name</span
                    ></label
                  >
                  <input
                    name="siteName"
                    type="text"
                    value="<%= settings?.siteName || 'Leviro' %>"
                    class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
                    placeholder="Site name"
                  />
                </div>

                <div>
                  <label class="label"
                    ><span class="label-text text-slate-700"
                      >Base URL (optional)</span
                    ></label
                  >
                  <input
                    name="baseUrl"
                    type="text"
                    value="<%= settings?.baseUrl || '' %>"
                    class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
                    placeholder="https://example.com"
                  />
                </div>

                <div class="md:col-span-2">
                  <label class="label"
                    ><span class="label-text text-slate-700"
                      >Meta Title</span
                    ></label
                  >
                  <input
                    name="metaTitle"
                    type="text"
                    value="<%= settings?.meta?.title || '' %>"
                    class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
                    placeholder="Meta title for SEO"
                  />
                </div>

                <div class="md:col-span-2">
                  <label class="label"
                    ><span class="label-text text-slate-700"
                      >Meta Description</span
                    ></label
                  >
                  <textarea
                    name="metaDescription"
                    class="textarea textarea-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
                    rows="3"
                    placeholder="Short description for SEO"
                  >
<%= settings?.meta?.description || '' %></textarea
                  >
                </div>
              </div>

              <div
                class="flex justify-end gap-3 pt-4 border-t border-slate-200"
              >
                <button type="submit" class="btn btn-primary">
                  Save General
                </button>
              </div>
            </form>
          </section>

          <section x-show="tab==='assets'" x-cloak>
            <form
              action="/admin/settings"
              method="post"
              enctype="multipart/form-data"
              class="space-y-6"
            >
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div
                  x-data="imageInput('<%= settings?.assets?.logo || '' %>')"
                  class="bg-slate-50 p-4 rounded-lg border border-slate-200"
                >
                  <label class="label"
                    ><span class="label-text text-slate-700">Logo</span></label
                  >
                  <div class="flex items-center gap-4">
                    <div
                      class="w-28 h-28 bg-white border border-slate-200 rounded-md flex items-center justify-center overflow-hidden flex-shrink-0"
                    >
                      <img
                        :src="preview"
                        alt="logo preview"
                        class="object-contain w-full h-full"
                      />
                    </div>
                    <div class="flex-1">
                      <input
                        @change="onFileChange($event)"
                        type="file"
                        name="logo"
                        accept="image/*"
                        class="file-input file-input-bordered w-full bg-white border-slate-300"
                      />
                      <p class="text-xs text-slate-500 mt-2">
                        Recommended: PNG / SVG. Max 2MB.
                      </p>
                    </div>
                  </div>
                </div>

                <div
                  x-data="imageInput('<%= settings?.assets?.favicon || '' %>')"
                  class="bg-slate-50 p-4 rounded-lg border border-slate-200"
                >
                  <label class="label"
                    ><span class="label-text text-slate-700"
                      >Favicon</span
                    ></label
                  >
                  <div class="flex items-center gap-4">
                    <div
                      class="w-14 h-14 bg-white border border-slate-200 rounded-md flex items-center justify-center overflow-hidden flex-shrink-0"
                    >
                      <img
                        :src="preview"
                        alt="favicon preview"
                        class="object-contain w-full h-full"
                      />
                    </div>
                    <div class="flex-1">
                      <input
                        @change="onFileChange($event)"
                        type="file"
                        name="favicon"
                        accept="image/*"
                        class="file-input file-input-bordered w-full bg-white border-slate-300"
                      />
                      <p class="text-xs text-slate-500 mt-2">
                        ICO/PNG recommended.
                      </p>
                    </div>
                  </div>
                </div>

                <div
                  class="md:col-span-2 bg-slate-50 p-4 rounded-lg border border-slate-200"
                >
                  <label class="label"
                    ><span class="label-text text-slate-700"
                      >Homepage Slider (multiple)</span
                    ></label
                  >
                  <div
                    class="grid grid-cols-2 sm:grid-cols-4 md:grid-cols-6 gap-3 mb-4"
                  >
                    <% (settings?.assets?.slider || []).forEach(function(s){ %>
                    <div
                      class="w-full aspect-square border border-slate-200 rounded-md overflow-hidden bg-white"
                    >
                      <img
                        src="<%= s %>"
                        class="object-cover w-full h-full"
                        alt="slider image"
                      />
                    </div>
                    <% }) %>
                  </div>
                  <div>
                    <input
                      type="file"
                      name="slider"
                      accept="image/*"
                      multiple
                      class="file-input file-input-bordered w-full bg-white border-slate-300"
                    />
                    <p class="text-xs text-slate-500 mt-2">
                      Add new images here. Max 2MB each. (This will replace old
                      slider).
                    </p>
                  </div>
                </div>

                <div
                  x-data="imageInput('<%= settings?.assets?.innerDoorsImage || '' %>')"
                  class="bg-slate-50 p-4 rounded-lg border border-slate-200"
                >
                  <label class="label"
                    ><span class="label-text text-slate-700"
                      >Interior Doors Image</span
                    ></label
                  >
                  <div class="flex items-center gap-4">
                    <div
                      class="w-36 h-24 bg-white border border-slate-200 rounded-md overflow-hidden flex-shrink-0"
                    >
                      <img
                        :src="preview"
                        alt="inner preview"
                        class="object-cover w-full h-full"
                      />
                    </div>
                    <div class="flex-1">
                      <input
                        @change="onFileChange($event)"
                        type="file"
                        name="innerDoorsImage"
                        accept="image/*"
                        class="file-input file-input-bordered w-full bg-white border-slate-300"
                      />
                      <p class="text-xs text-slate-500 mt-2">
                        Used on category / landing sections.
                      </p>
                    </div>
                  </div>
                </div>

                <div
                  x-data="imageInput('<%= settings?.assets?.outerDoorsImage || '' %>')"
                  class="bg-slate-50 p-4 rounded-lg border border-slate-200"
                >
                  <label class="label"
                    ><span class="label-text text-slate-700"
                      >Exterior Doors Image</span
                    ></label
                  >
                  <div class="flex items-center gap-4">
                    <div
                      class="w-36 h-24 bg-white border border-slate-200 rounded-md overflow-hidden flex-shrink-0"
                    >
                      <img
                        :src="preview"
                        alt="outer preview"
                        class="object-cover w-full h-full"
                      />
                    </div>
                    <div class="flex-1">
                      <input
                        @change="onFileChange($event)"
                        type="file"
                        name="outerDoorsImage"
                        accept="image/*"
                        class="file-input file-input-bordered w-full bg-white border-slate-300"
                      />
                      <p class="text-xs text-slate-500 mt-2">
                        Used on category / landing sections.
                      </p>
                    </div>
                  </div>
                </div>
              </div>

              <div
                class="flex justify-end gap-3 pt-4 border-t border-slate-200"
              >
                <button type="submit" class="btn btn-primary">
                  Save Assets
                </button>
              </div>
            </form>
          </section>

          <section x-show="tab==='contact'" x-cloak>
            <form action="/admin/settings" method="post" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="label"
                    ><span class="label-text text-slate-700">Email</span></label
                  >
                  <input
                    name="email"
                    type="email"
                    value="<%= settings?.email || '' %>"
                    class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
                    placeholder="info@domain.com"
                  />
                </div>

                <div>
                  <label class="label"
                    ><span class="label-text text-slate-700">Phone</span></label
                  >
                  <input
                    name="phone"
                    type="text"
                    value="<%= settings?.phone || '' %>"
                    class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
                    placeholder="+20123..."
                  />
                </div>

                <div>
                  <label class="label"
                    ><span class="label-text text-slate-700"
                      >WhatsApp</span
                    ></label
                  >
                  <input
                    name="whatsapp"
                    type="text"
                    value="<%= settings?.whatsapp || '' %>"
                    class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
                    placeholder="20123..."
                  />
                </div>

                <div>
                  <label class="label"
                    ><span class="label-text text-slate-700"
                      >Facebook</span
                    ></label
                  >
                  <input
                    name="facebook"
                    type="text"
                    value="<%= settings?.social?.facebook || '' %>"
                    class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
                    placeholder="Facebook URL"
                  />
                </div>

                <div>
                  <label class="label"
                    ><span class="label-text text-slate-700"
                      >Instagram</span
                    ></label
                  >
                  <input
                    name="instagram"
                    type="text"
                    value="<%= settings?.social?.instagram || '' %>"
                    class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
                    placeholder="Instagram URL"
                  />
                </div>

                <div>
                  <label class="label"
                    ><span class="label-text text-slate-700"
                      >TikTok</span
                    ></label
                  >
                  <input
                    name="tiktok"
                    type="text"
                    value="<%= settings?.social?.tiktok || '' %>"
                    class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
                    placeholder="TikTok URL"
                  />
                </div>
              </div>

              <div class="flex justify-end pt-4 border-t border-slate-200">
                <button type="submit" class="btn btn-primary">
                  Save Contact
                </button>
              </div>
            </form>
          </section>

          <section x-show="tab==='admin'" x-cloak>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="bg-slate-50 p-4 rounded-lg border border-slate-200">
                <h3 class="font-semibold mb-3 text-slate-800">Admin Profile</h3>
                <form action="/admin/settings" method="post" class="space-y-3">
                  <div>
                    <label class="label"
                      ><span class="label-text text-slate-700"
                        >Username</span
                      ></label
                    >
                    <input
                      name="adminUsername"
                      type="text"
                      value="<%# req.session?.admin?.username || '' %>"
                      class="input input-bordered w-full bg-slate-200 text-slate-500 cursor-not-allowed"
                      readonly
                    />
                    <p class="text-xs text-slate-500 mt-1">
                      To change username you may update directly in DB
                      (optional).
                    </p>
                  </div>
                </form>
              </div>

              <div class="bg-slate-50 p-4 rounded-lg border border-slate-200">
                <h3 class="font-semibold mb-3 text-slate-800">
                  Change Password
                </h3>
                <form
                  action="/admin/settings/change-password"
                  method="post"
                  class="space-y-3"
                >
                  <input
                    name="currentPassword"
                    type="password"
                    class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
                    placeholder="Current password"
                    required
                  />
                  <input
                    name="newPassword"
                    type="password"
                    class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
                    placeholder="New password"
                    required
                  />
                  <input
                    name="confirmPassword"
                    type="password"
                    class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
                    placeholder="Confirm new password"
                    required
                  />
                  <div class="flex justify-end pt-2">
                    <button type="submit" class="btn btn-warning">
                      Change Password
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </section>
        </main>
      </div>
    </div>
  </div>
</div>

<script>
  // Alpine helper for image preview
  function imageInput(initial = "") {
    return {
      // تغيير: استخدام placeholder أفضل في حالة عدم وجود صورة
      preview:
        initial || "https://placehold.co/200x200/e2e8f0/94a3b8?text=Preview",
      onFileChange(e) {
        const file = e.target.files[0];
        if (!file) {
          this.preview =
            initial ||
            "https://placehold.co/200x200/e2e8f0/94a3b8?text=Preview";
          return;
        }
        const reader = new FileReader();
        reader.onload = (ev) => {
          this.preview = ev.target.result;
        };
        reader.readAsDataURL(file);
      },
    };
  }
</script>
