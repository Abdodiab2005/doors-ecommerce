<main class="max-w-6xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-semibold text-gray-800 mb-6"><%= __('admin.dashboard.title') %></h1>

  <!-- كروت إحصائيات -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white rounded-xl shadow p-6">
      <h2 class="text-gray-500 text-sm"><%= __('admin.dashboard.total_products') %></h2>
      <p class="text-3xl font-bold mt-2"><%= stats.totalProducts || 0 %></p>
    </div>

    <div class="bg-white rounded-xl shadow p-6">
      <h2 class="text-gray-500 text-sm"><%= __('admin.dashboard.internal_doors') %></h2>
      <p class="text-3xl font-bold mt-2"><%= stats.innerCount || 0 %></p>
    </div>

    <div class="bg-white rounded-xl shadow p-6">
      <h2 class="text-gray-500 text-sm"><%= __('admin.dashboard.external_doors') %></h2>
      <p class="text-3xl font-bold mt-2"><%= stats.mainCount || 0 %></p>
    </div>
  </div>

  <!-- آخر تعديل -->
  <div class="mt-10 bg-white rounded-xl shadow p-6">
    <h2 class="text-lg font-semibold mb-2"><%= __('admin.dashboard.last_settings_update') %></h2>
    <p class="text-gray-600 text-sm">
      <%= stats.settingsUpdatedAt ? new
      Date(stats.settingsUpdatedAt).toLocaleString('ar-EG') : '—' %>
    </p>
  </div>
</main>
