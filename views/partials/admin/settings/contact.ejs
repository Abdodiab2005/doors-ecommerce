<section x-show="tab==='contact'" x-cloak>
  <form
    action="/admin/settings"
    method="post"
    class="space-y-6"
    enctype="multipart/form-data"
  >
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="label"
          ><span class="label-text text-slate-700">Email</span></label
        >
        <input
          name="email"
          type="email"
          value="<%= settings?.email || '' %>"
          class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
          placeholder="info@domain.com"
        />
      </div>

      <div>
        <label class="label"
          ><span class="label-text text-slate-700">Phone</span></label
        >
        <input
          name="phone"
          type="text"
          value="<%= settings?.phone || '' %>"
          class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
          placeholder="+20123..."
        />
      </div>

      <div>
        <label class="label"
          ><span class="label-text text-slate-700">WhatsApp</span></label
        >
        <input
          name="whatsapp"
          type="text"
          value="<%= settings?.whatsapp || '' %>"
          class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
          placeholder="20123..."
        />
      </div>

      <div>
        <label class="label"
          ><span class="label-text text-slate-700">Facebook</span></label
        >
        <input
          name="facebook"
          type="text"
          value="<%= settings?.social?.facebook || '' %>"
          class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
          placeholder="Facebook URL"
        />
      </div>

      <div>
        <label class="label"
          ><span class="label-text text-slate-700">Instagram</span></label
        >
        <input
          name="instagram"
          type="text"
          value="<%= settings?.social?.instagram || '' %>"
          class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
          placeholder="Instagram URL"
        />
      </div>

      <div>
        <label class="label"
          ><span class="label-text text-slate-700">TikTok</span></label
        >
        <input
          name="tiktok"
          type="text"
          value="<%= settings?.social?.tiktok || '' %>"
          class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
          placeholder="TikTok URL"
        />
      </div>
    </div>

    <div class="flex justify-end pt-4 border-t border-slate-200">
      <button type="submit" class="btn btn-primary">Save Contact</button>
    </div>
  </form>
</section>
