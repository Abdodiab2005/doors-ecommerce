<section x-show="tab==='credentials'" x-cloak>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="bg-slate-50 p-4 rounded-lg border border-slate-200">
      <h3 class="font-semibold mb-3 text-slate-800">Admin Profile</h3>
      <form action="/admin/settings" method="post" class="space-y-3">
        <div>
          <label class="label"
            ><span class="label-text text-slate-700">Username</span></label
          >
          <input
            name="adminUsername"
            type="text"
            value="<%# req.session?.admin?.username || '' %>"
            class="input input-bordered w-full bg-slate-200 text-slate-500 cursor-not-allowed"
            readonly
          />
          <p class="text-xs text-slate-500 mt-1">
            To change username you may update directly in DB (optional).
          </p>
        </div>
      </form>
    </div>

    <div class="bg-slate-50 p-4 rounded-lg border border-slate-200">
      <h3 class="font-semibold mb-3 text-slate-800">Change Password</h3>
      <form
        action="/admin/settings/change-password"
        method="post"
        class="space-y-3"
      >
        <input
          name="currentPassword"
          type="password"
          class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
          placeholder="Current password"
          required
        />
        <input
          name="newPassword"
          type="password"
          class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
          placeholder="New password"
          required
        />
        <input
          name="confirmPassword"
          type="password"
          class="input input-bordered w-full bg-slate-50 border-slate-300 focus:bg-white focus:ring-primary/50 focus:border-primary transition-colors duration-200"
          placeholder="Confirm new password"
          required
        />
        <div class="flex justify-end pt-2">
          <button type="submit" class="btn btn-warning">Change Password</button>
        </div>
      </form>
    </div>
  </div>
</section>
