<style>
  .product-details-container {
    max-width: 1200px;
    margin: 40px auto;
    padding: 20px;
    display: grid;
    /* عمودين، واحد للصور والتاني للمعلومات */
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    font-family: Arial, sans-serif;
  }

  /* --- عمود الصور (الشمال) --- */
  .product-gallery {
    display: flex;
    flex-direction: column;
  }
  .main-image {
    width: 100%;
    height: 450px;
    object-fit: cover;
    border-radius: 8px;
    border: 1px solid #eee;
    margin-bottom: 15px;
  }
  .thumbnail-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    gap: 10px;
  }
  .thumbnail {
    width: 100%;
    height: 80px;
    object-fit: cover;
    border-radius: 4px;
    border: 2px solid #ddd;
    cursor: pointer;
    transition: border-color 0.2s;
  }
  .thumbnail:hover {
    border-color: #007bff;
  }

  /* --- عمود المعلومات (اليمين) --- */
  .product-info {
    display: flex;
    flex-direction: column;
  }
  .product-info h1 {
    font-size: 2.5rem;
    margin-top: 0;
    margin-bottom: 10px;
  }
  .info-category {
    background-color: #f0f0f0;
    color: #555;
    padding: 5px 10px;
    border-radius: 15px;
    font-size: 0.9rem;
    font-weight: bold;
    display: inline-block;
    margin-bottom: 20px;
    text-transform: capitalize;
  }
  .info-price {
    font-size: 2rem;
    font-weight: bold;
    color: #333;
    margin-bottom: 20px;
  }
  .info-stock {
    font-size: 1.1rem;
    margin-bottom: 20px;
  }
  .in-stock { color: #28a745; font-weight: bold; }
  .out-of-stock { color: #dc3545; font-weight: bold; }

  .info-colors h4 {
    margin-bottom: 10px;
  }
  .color-options {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
  }
  .color-swatch {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 0 0 5px rgba(0,0,0,0.2);
    cursor: pointer;
  }
  .color-swatch:hover {
    opacity: 0.8;
  }

  .info-description {
    font-size: 1rem;
    line-height: 1.6;
    color: #444;
    margin-bottom: 30px;
  }

  .add-to-cart {
    padding: 15px 20px;
    font-size: 1.2rem;
    font-weight: bold;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.2s;
  }
  .add-to-cart:hover {
    background-color: #0056b3;
  }
  .add-to-cart:disabled {
    background-color: #aaa;
    cursor: not-allowed;
  }

  /* --- (للموبايل) --- */
  @media (max-width: 768px) {
    .product-details-container {
      grid-template-columns: 1fr; /* خلهم تحت بعض */
    }
    .main-image {
      height: 350px;
    }
  }
</style>

<div class="product-details-container">
  
  <div class="product-gallery">
    <img 
      src="<%= (product.images && product.images.length > 0) ? product.images[0] : 'https://via.placeholder.com/600x450?text=No+Image' %>" 
      alt="<%= product.name %>" 
      class="main-image"
      id="mainImage"
    >

    <% 
      const allImages = [...product.images];
      product.colors.forEach(color => {
        if (color.image) allImages.push(color.image);
      });
    %>

    <div class="thumbnail-grid">
      <% allImages.forEach(img => { %>
        <img 
          src="<%= img %>" 
          alt="Product Thumbnail" 
          class="thumbnail"
          onclick="changeImage('<%= img %>')"
        >
      <% }) %>
    </div>
  </div>

  <div class="product-info">
    <span class="info-category"><%= product.category %></span>
    <h1><%= product.name %></h1>
    <p class="info-price">$<%= product.price.toFixed(2) %></p>

    <% if (product.stock > 0) { %>
      <p class="info-stock in-stock">
        In Stock (<%= product.stock %> available)
      </p>
    <% } else { %>
      <p class="info-stock out-of-stock">Out of Stock</p>
    <% } %>

    <% if (product.colors && product.colors.length > 0) { %>
      <div class="info-colors">
        <h4>Available Colors:</h4>
        <div class="color-options">
          <% product.colors.forEach(color => { %>
            <span 
              class="color-swatch" 
              style="background-color: <%= color.hex %>;" 
              title="<%= color.name %>"
              <% if (color.image) { %>
                onclick="changeImage('<%= color.image %>')"
              <% } %>
            ></span>
          <% }) %>
        </div>
      </div>
    <% } %>
    
    <div class="info-description">
      <p><%= product.description %></p>
    </div>
    
    <button 
      class="add-to-cart"
      <%= product.stock === 0 ? 'disabled' : '' %>
    >
      <%= product.stock === 0 ? 'Unavailable' : 'Add to Cart' %>
    </button>

  </div>
</div>

<script>
  function changeImage(newSrc) {
    document.getElementById('mainImage').src = newSrc;
  }
</script>